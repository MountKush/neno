<!doctype html>
<html lang='{{ shop.locale }}'>
  <head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>
    <meta name='viewport' content='width=device-width,initial-scale=1'>
    <meta name='theme-color' content='{{ settings.color_button }}'>
    <link rel='canonical' href='{{ canonical_url }}'>
    {{ content_for_header }}
    {% render 'app-settings-data' %}
    {% render 'app-styles' %}
  </head>
  <body>
    {% comment %}
      * The application mounting hook
    {% endcomment %}
    <div id='vue-app'></div>

    {% comment %}
      * Hides the initially loaded sections that are solely used as data references
    {% endcomment %}
    <div style='display: none;'>
      {% section 'static-header' %}
      {{ content_for_layout }}
      {% section 'static-footer' %}
    </div>

    {% comment %}
      * The theme scripts
    {% endcomment %}
    {% render 'app-scripts' %}


    {% comment %}
      * Hide Shopify Preview Bar
    {% endcomment %}
    <style>
      #preview-bar-iframe {
        display: none !important;
      }
      html {
        padding: 0 !important;
      }
    </style>
  </body>
</html>
